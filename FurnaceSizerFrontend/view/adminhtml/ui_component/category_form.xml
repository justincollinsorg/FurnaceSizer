<?xml version="1.0"?>
<form xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Ui:etc/ui_configuration.xsd">
    <fieldset name="furnace_sizer_category_tab" sortOrder="10">
        <settings>
            <collapsible>true</collapsible>
            <label translate="true">Furnace Sizer</label>
        </settings>
        <container name="custom_tab" sortOrder="180">
            <htmlContent name="html_content">
                <block name="custom_category_block" class="Ecommerce121\FurnaceSizer\Block\Adminhtml\Custom\Tab"/>
            </htmlContent>
        </container>
        <field name="show_form" sortOrder="1">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="dataType" xsi:type="string">boolean</item>
                    <item name="formElement" xsi:type="string">checkbox</item>
                    <item name="label" xsi:type="string" translate="true">Show(Start Inheritance)</item>
                    <item name="prefer" xsi:type="string">toggle</item>
                    <item name="valueMap" xsi:type="array">
                        <item name="true" xsi:type="string">1</item>
                        <item name="false" xsi:type="string">0</item>
                    </item>
                    <item name="default" xsi:type="number">0</item>
                </item>
            </argument>
        </field>
        <field name="select_fsizer" sortOrder="88" formElement="select">
            <settings>
                <dataType>string</dataType>
                <label translate="true">Select Furnace Sizer Block</label>
            </settings>
        </field>
        <field name="disable_subcategory_inheritance" sortOrder="2">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="dataType" xsi:type="string">boolean</item>
                    <item name="formElement" xsi:type="string">checkbox</item>
                    <item name="label" xsi:type="string" translate="true">End Subcategory Inheritance</item>
                    <item name="prefer" xsi:type="string">toggle</item>
                    <item name="valueMap" xsi:type="array">
                        <item name="true" xsi:type="string">1</item>
                        <item name="false" xsi:type="string">0</item>
                    </item>
                    <item name="default" xsi:type="number">0</item>
                </item>
            </argument>
        </field> 
        <field name="bypass_disable_subcategory_inheritance" sortOrder="3">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="dataType" xsi:type="string">boolean</item>
                    <item name="formElement" xsi:type="string">checkbox</item>
                    <item name="label" xsi:type="string" translate="true">Force Show</item>
                    <item name="prefer" xsi:type="string">toggle</item>
                    <item name="valueMap" xsi:type="array">
                        <item name="true" xsi:type="string">1</item>
                        <item name="false" xsi:type="string">0</item>
                    </item>
                    <item name="default" xsi:type="number">0</item>
                </item>
            </argument>
        </field> 
    </fieldset>
    <fieldset name="content" sortOrder="11">
        <settings>
            <collapsible>true</collapsible>
            <label translate="true">Content</label>
        </settings>
    </fieldset>
</form>
